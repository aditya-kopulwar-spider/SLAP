@using SLAP_App.Models
@model List<User>

@{
    ViewBag.Title = "Index";
}

<h2>List of Users</h2>

<table>
    @foreach (var user in Model)
    {
        <tr style="height: 25px">
            <td width="150">
                @user.displayName
                @Html.HiddenFor(model => user.id)
            </td>
            <td width="100">
                @if (user.IsPC)
                {
                    @Html.ActionLink("Remove PC", "RemovePC", "Admin", new { Id = user.id }, null)
                }
                else
                {
                    @Html.ActionLink("Make a PC", "MakePC", "Admin", new { Id = user.id}, null)
                }
            </td>
            <td width="200">
                @if (user.IsPC)
                {
                    @Html.ActionLink("Assign Associates", "AssignAssociates", "Admin", new { pcID = user.id }, null)
                }
            </td>
        </tr>
    }

</table>