@*@using System.Drawing;*@

@model SLAP_App.Models.PCAssociateViewModel
@{
    var pcAssociateViewModel=Model;
}
 
<div class="pc-associate-box">
    <b>@Html.DisplayFor(model => model.AssociateDisplayName)  </b>
    @if (!pcAssociateViewModel.PeerListFinalized)
    {
        <div style="float: right;"> @Html.ActionLink("Peers", "AssignPeersToAssociates", "PC", pcAssociateViewModel, new {@class = "btn btn-primary btn-sm"})</div>
    }
    else
    {
        if (!string.IsNullOrEmpty(pcAssociateViewModel.SelfAppraisalDocumentUrl))
        {
            <a href="@Model.SelfAppraisalDocumentUrl" class="btn btn-primary btn-sm" style="float: right" target="_blank" title="Download Self Appraisal Form">Download Self Appraisal</a>
        }
        else
        {
            <a href="" target="_blank" title="Self Appraisal Form Not Uploaded">Download Not Available</a>
@*                                                                           <div style="float: right;"> @Html.ActionLink("Peers", "AssignPeersToAssociates", "PC", pcAssociateViewModel, new {@class = "btn btn-primary btn-sm disabled"})</div>    *@
        }

    }
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Peers[0].PeerName)
                </th>
                @if (pcAssociateViewModel.PeerListFinalized)
                {
                    <th>
                        Download Feedback Form
                    </th>
                }
               
            </tr>
            @for (var i = 0; i < Model.Peers.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => Model.Peers[i].PeerName)
                    </td>
                    <td>
                        @if ( pcAssociateViewModel.PeerListFinalized && (!string.IsNullOrEmpty(Model.Peers[i].FeedbackDocumentUrl)))
                        {
                            <a href="@Model.Peers[i].FeedbackDocumentUrl" target="_blank" title="Download Feedback form">Download</a>
                        }
                    </td>

                </tr>
            }
        </table>
</div>



